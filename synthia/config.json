{
  "name": "Synthia - AI Personal Assistant",
  "version": "1.0.9c",
  "slug": "synthia",
  "description": "A personal AI assistant for Home Assistant.",
  "startup": "application",
  "boot": "auto",
  "ingress": true,
  "ingress_port": 5000,
  "ingress_entry": "/",
  "panel_icon": "mdi:email",
  "panel_title": "Synthia",
  "arch": ["amd64", "armv7", "armhf"],
  "options": {
    "general": {
      "log_interval": 10,
      "fetch_interval_minutes": 10,
      "days_to_fetch": 7,
      "custom_message": "Synthia is on"
    },
    "gmail": {
      "enable_gmail": true,
      "client_id": "",
      "client_secret": "",
      "refresh_token": ""
    }
  },
  "schema": {
    "general": {
      "log_interval": "int",
      "fetch_interval_minutes": "int",
      "days_to_fetch": "int",
      "custom_message": "str"
    },
    "gmail": {
      "enable_gmail": "bool",
      "client_id": "str",
      "client_secret": "str",
      "refresh_token": "str"
    }
  }
}
